@using Rationarum_v3.Models;
@using Microsoft.AspNet.Identity;
@model Rationarum_v3.Models.ManageUserViewModel
@{
    ViewBag.Title = "Upravljanje korisničkim računom";
}

<h2>@ViewBag.Title</h2>
<p>Prijavljeni ste kao <strong>@User.Identity.GetUserName()</strong>.</p>
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-6">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }

        <section id="externalLogins">
            @Html.Action("RemoveAccountList")
           @* @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })*@
        </section>
    </div>
    <div class="col-md-6">
        @if (ViewBag.HasLocalPassword)
        {   
            @Html.Partial("_AccountSettingsPartial", Model)
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
